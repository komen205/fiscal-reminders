[Unit]
Description=Fiscal Reminders - Portuguese Tax Deadline Notifications
After=network.target

[Service]
Type=simple
User=nobody
Group=nogroup
WorkingDirectory=/var/lib/fiscal-reminders
ExecStart=/usr/local/bin/fiscal-reminders
Restart=on-failure
RestartSec=10

# Environment
Environment=NTFY_TOPIC=fiscal-reminders
Environment=NTFY_SERVER=https://ntfy.sh

# Security
NoNewPrivileges=true
ProtectSystem=strict
ProtectHome=true
PrivateTmp=true

[Install]
WantedBy=multi-user.target
